page {
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}
.address-section {
  padding: 30rpx 0;
  background: #fff;
  position: relative;
  margin-bottom: 20rpx;
}
.address-section .order-content {
  display: flex;
  align-items: center;
}
.address-section .icon-shouhuodizhi {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
}
.address-section .icon-shouhuodizhi image {
  mode: aspectFit;
  height: 60rpx;
  width: 60rpx;
}
.address-section .cen {
  display: flex;
  flex-direction: column;
  flex: 1;
  font-size: 28rpx;
}
.address-section .name {
  font-size: 34rpx;
  margin-right: 24rpx;
}
.address-section .address {
  margin-top: 16rpx;
  margin-right: 20rpx;
}
.address-section .icon-you {
  width: 30rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 20rpx;
}
.address-section .icon-you image {
  mode: aspectFit;
  height: 30rpx;
  width: 30rpx;
}
.address-section .a-bg {
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  width: 100%;
  height: 5rpx;
}
.yt-list {
  margin-top: 16rpx;
  background: #fff;
}
.yt-list-cell {
  display: flex;
  align-items: center;
  padding: 10rpx 30rpx 10rpx 40rpx;
  line-height: 70rpx;
  position: relative;
}
.yt-list-cell.cell-hover {
  background: #fafafa;
}
.yt-list-cell.b-b:after {
  left: 30rpx;
}
.yt-list-cell .cell-tit {
  flex: 1;
  font-size: 26rpx;
  margin-right: 10rpx;
}
.yt-list-cell .cell-tip {
  font-size: 26rpx;
}
.yt-list-cell .desc {
  flex: 1;
}
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 995;
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 150rpx;
  justify-content: space-between;
  font-size: 30rpx;
  background-color: #fff;
  z-index: 998;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}
.footer .price-content {
  padding-left: 30rpx;
}
.footer .price-tip {
  margin-left: 8rpx;
  color: #F44545;
  font-weight: bold;
}
.footer .price {
  font-size: 36rpx;
}
.footer .submit {
  margin-right: 15rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #516f25;
  border-radius: 50rpx;
  width: 250rpx;
}
.goods {
  line-height: 80rpx;
  background-color: #fff;
}
.goods-detail {
  display: flex;
  padding: 30rpx 15rpx 30rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: 5rpx solid #F1F1F1;
  align-items: center;
}
.goods-detail .detail-left {
  display: flex;
}
.goods-detail .detail-left .goods-left {
  display: flex;
  align-items: center;
}
.goods-detail .detail-left .goods-left .selected {
  color: #F1F1F1;
}
.goods-detail .detail-left .goods-left .img {
  width: 140rpx;
  height: 140rpx;
}
.goods-detail .size {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-left: 30rpx;
}
.goods-detail .size .goods-price {
  font-size: 30rpx;
  color: #F44545;
  font-weight: bold;
}
.goods-detail .size .name {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.goods-detail .size .msg {
  font-size: 25rpx;
  color: darkgrey;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.goods-detail .detail-right text {
  width: 150rpx;
  line-height: 50rpx;
  text-align: center;
  display: inline-block;
  margin-right: 10rpx;
}
.goods-detail .detail-right .num {
  font-size: 40rpx;
  font-weight: bold;
  color: #516f25;
}
.kongbai {
  height: 200rpx;
  background-color: #f5f5f5;
}

