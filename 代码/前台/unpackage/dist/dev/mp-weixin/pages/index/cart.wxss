page {
  background-color: #f5f5f5;
}
.goods {
  line-height: 80rpx;
  background-color: #fff;
}
.goods-detail {
  display: flex;
  padding: 30rpx 15rpx 30rpx 30rpx;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: 5rpx solid #F1F1F1;
  align-items: center;
}
.goods-detail .detail-left {
  display: flex;
}
.goods-detail .detail-left .goods-left {
  display: flex;
  align-items: center;
}
.goods-detail .detail-left .goods-left .selected {
  color: #F1F1F1;
}
.goods-detail .detail-left .goods-left .img {
  width: 140rpx;
  height: 140rpx;
}
.goods-detail .detail-left .goods-left .xuanze {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.goods-detail .size {
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-left: 30rpx;
}
.goods-detail .size .goods-price {
  font-size: 30rpx;
  color: #F44545;
  font-weight: bold;
}
.goods-detail .size .name {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.goods-detail .size .msg {
  font-size: 25rpx;
  color: darkgrey;
  overflow: hidden;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.right {
  align-items: center;
  width: 150rpx;
  flex-direction: column;
}
.detail-right {
  padding-left: 40rpx;
  display: flex;
  width: 150rpx;
  align-items: center;
}
.detail-right text {
  line-height: 50rpx;
  text-align: center;
  display: inline-block;
  background-color: #F7F7F7;
  margin-right: 10rpx;
}
.detail-right .num {
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 20rpx;
}
.detail-right .add {
  color: #000000;
  margin-right: 20rpx;
  background-color: #fff;
}
.detail-right .subtract {
  color: #000000;
  background-color: #fff;
}
.delete {
  margin-top: 20rpx;
  width: 50rpx;
  align-items: center;
}
.delete .shanchu {
  padding-left: 55rpx;
  width: 40rpx;
  height: 40rpx;
}
.end {
  height: 150rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  display: flex;
  align-items: center;
  width: 750rpx;
  padding-bottom: calc(0px);
}
.end-left {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  width: 440rpx;
}
.end-left .end-flex {
  display: flex;
  align-items: center;
}
.end-left text {
  color: #f00;
  font-weight: bold;
}
.end-left .quanxuan {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.end-right button {
  margin-right: 15rpx;
  line-height: 90rpx;
  background-color: #516f25;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  border-radius: 50rpx;
  width: 250rpx;
}

